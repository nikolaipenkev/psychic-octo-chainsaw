{
  "name": "psychic-octo-chainsaw",
  "version": "1.0.0",
  "description": "The point of this repo is to setup TypeScript with Selenium for PoC reasons",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc ",
    "test": "npx mocha testsJS/*.js"
  },
  "mocha": {
    "require": "esm",
    "experimental-modules": true,
    "timeout": 60000,
    "exit": true,

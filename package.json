    "reporterOptions": {
      "resultsDir": "allure-results"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.14",
    "@types/mocha": "^10.0.6",
    "@types/selenium-webdriver": "^4.1.22",
    "allure-commandline": "^2.28.0",
    "allure-mocha": "^2.15.1",
    "chai": "4.2.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "esm": "^3.2.25",
    "selenium-webdriver": "^4.19.0"
  }
}
